<div class="row">
	<div class="col-xs-12">	

		<% if @model == 'user' %>
			<h2>Users search for '<%= params["search"]["content"] %>'</h2>

			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		<% elsif @model == 'book' %>
			<h2>Books search for '<%= params["search"]["content"] %>'</h2>

			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
							<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

		<% end %>

	</div>
</div>